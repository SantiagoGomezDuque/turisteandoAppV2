<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoHotel">


    <ImageView
        android:id="@+id/fotohoteldesc"
        android:layout_width="212dp"
        android:layout_height="267dp"
        android:scaleType="fitXY"
        android:src="@drawable/hotel1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/FotoHotelExt"
        android:layout_width="198dp"
        android:layout_height="270dp"
        android:scaleType="fitXY"
        android:src="@drawable/hotel3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nombreHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel el Mirador"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fotohoteldesc"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/precioHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$250000 COP"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombreHotel"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.5"

        />

    <TextView
        android:id="@+id/contactoHotel"
        android:layout_width="212dp"
        android:layout_height="51dp"
        android:text="Contacto: 3225322222"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="2.9"
        app:layout_constraintStart_toEndOf="@id/precioHotel"
        app:layout_constraintTop_toBottomOf="@id/nombreHotel"
        app:layout_constraintVertical_bias="0.2" />


    <TextView
        android:id="@+id/telefonoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Contacto"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="2.8"
        app:layout_constraintStart_toEndOf="@id/precioHotel"
        app:layout_constraintTop_toBottomOf="@id/nombreHotel"
        />


    <TextView
        android:id="@+id/descripcionHotel"
        android:layout_width="375dp"
        android:layout_height="94dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eget pulvinar enim."
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/contactoHotel"
        app:layout_constraintTop_toBottomOf="@id/telefonoHotel"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/ValoracionHotel"
        android:layout_width="416dp"
        android:layout_height="95dp"
        android:text="Valoracion: 5"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/contactoHotel"
        app:layout_constraintTop_toBottomOf="@id/telefonoHotel"
        app:layout_constraintVertical_bias="0.417" />

    <Button
        android:id="@+id/botonreservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@color/black"
        android:text="Reservar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>